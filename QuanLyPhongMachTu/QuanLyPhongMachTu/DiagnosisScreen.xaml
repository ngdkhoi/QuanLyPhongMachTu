<UserControl x:Class="QuanLyPhongMachTu.DiagnosisScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyPhongMachTu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White" FontSize="13"> 
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.3"/>
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10 0 5 0"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Border" x:Key="Container">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="False">
        <DockPanel DockPanel.Dock="Left"
                   LastChildFill="False"
                   Width="130">
            <Button DockPanel.Dock="Top" Margin="10">Lịch Sử KCB</Button>
        </DockPanel>
        <StackPanel Name="PatientInformationStackPanel"
                    DockPanel.Dock="Top" Margin="0 10 0 0">
            <Border Style="{StaticResource Container}" Background="Silver">
                <Grid Height="85" x:Name="PatientInfoGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.ColumnSpan="8"
                           FontWeight="Bold"
                           Foreground="IndianRed"
                           Text="THÔNG TIN BỆNH NHÂN"
                />
                    <TextBlock Grid.Row="1"
                           Text="MÃ BỆNH NHÂN"
                />
                    <TextBox Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" 
                           Text="GIỚI TÍNH"
                />
                    <TextBox Grid.Row="1" Grid.Column="3" />
                    <TextBlock Grid.Row="2" 
                           Text="TÊN BỆNH NHÂN"
                />
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" />

                    <TextBlock Grid.Row="1" Grid.Column="4"
                           Text="NGÀY SINH"
                />
                    <TextBox Grid.Row="1" Grid.Column="5" />
                    <TextBlock Grid.Row="1" Grid.Column="6"
                           Text="ĐIỆN THOẠI"
                />
                    <TextBox Grid.Row="1" Grid.Column="7" />
                    <TextBlock Grid.Row="2" Grid.Column="4"
                           Text="ĐỊA CHỈ"
                />
                    <TextBox Grid.Row="2" Grid.Column="5"
                         Grid.ColumnSpan="3"
                />
                </Grid>
            </Border>
            <Border Style="{StaticResource Container}" Margin="0 -2 0 0">
                <Grid Height="125">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.ColumnSpan="8"
                           FontWeight="Bold"
                           Foreground="IndianRed"
                           Text="THÔNG TIN KHÁM"
                    />
                    <TextBlock Grid.Row="1"
                           Text="SỐ HỒ SƠ"
                    />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             TextAlignment="Right"
                    />
                    <TextBlock Grid.Row="2"
                               Text="TRIỆU CHỨNG     "
                    />
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Grid.RowSpan="3" Height="65"
                             AcceptsReturn="True" TextWrapping="Wrap"
                    />
                </Grid>
            </Border>
        </StackPanel>
    </DockPanel>
</UserControl>
